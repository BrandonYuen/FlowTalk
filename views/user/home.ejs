<head>
	<title>FlowTalk - Home</title>
</head>

<div class="row">
    <div class="col s12">
		<h1>Home</h1>
		<div class="divider"></div>
		<p>
			Welcome <b><%= user.name %></b>, to the main chatroom. <br>
			Last login: <b><%= utility.timeSince(req.session.lastLogin) %> ago</b>
		</p>
	</div>
</div>

<div class="row">
	<div class="col s9">
		<div class="card">
		    <div class="card-image waves-effect waves-block waves-light" style="max-height: 200px">
		  		<img src="images/park.jpg">
		      <span class="card-title">Public Room's</span>
		    </div>
			<div class="card-tabs">
				<ul class="tabs tabs-fixed-width">
					<li class="tab"><a class="active" href="#publicChat1">Public #1</a></li>
				</ul>
			</div>
			<div class="card-content grey lighten-3" style="min-height: 400px; max-height: 400px">
				<div class="chatbox" id="chatbox"></div>
			</div>
		</div>
	</div>

	<div class="col s3">
	    <div class="card-panel grey darken-4">
			<span class="white-text"><h6>Users:</h6></span>
			<div class="divider"></div>
			<h7>
				<p>
					<span class="white-text">BlaBlaBla</span>
				</p>
			</h7>
	    </div>
	</div>
</div>

<div class="row">
	<div class="col s6">
		<div class="card-panel grey lighten-3">
			<div class="input-field">
				<input name="messageInput" id="messageInput" type="text"></input> <label for="messageInput">Type a message</label>
			</div>
			<div class="btn col s3 waves-effect waves-light" id="sendButton"><b>Send</b></div>
		</div>
	</div>
</div>

<!-- Pass local variables on to client-side variables -->
<script>
	var username = "<%= user.name %>";
</script>

<!-- Inject view specific files for client -->
<% block('localScripts', '<script src="js/chat.js"></script>') %>
